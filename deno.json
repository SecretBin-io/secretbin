{
	"version": "2.3.2",
	"tasks": {
		"check": {
			"description": "Lints and types check TypeScript files",
			"command": "deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx"
		},
		"test": {
			"description": "Runs unit tests and checks test coverage.",
			"command": "deno test --coverage=coverage && deno coverage coverage --detailed && rm -rf coverage"
		},
		"dev": {
			"description": "Starts SecretBin is dev mode and watch for changes.",
			"command": "deno run -A --unstable-cron vite"
		},
		"build": {
			"description": "Builds SecretBin for production.",
			"command": "deno run -A --unstable-cron vite build"
		},
		"deps": {
			"description": "Updates the credits.json file",
			"command": "deno run -A ./tools/deps/main.ts"
		},
		"icons:generate": {
			"description": "Convert the main logo (static/images/logo.png) to all the needed sizes.",
			"command": "task icons:generate"
		}
	},
	"lock": false,
	"nodeModulesDir": "auto",
	"lint": {
		"rules": {
			"tags": ["recommended", "fresh"],
			"include": [
				"jsx-button-has-type",
				"camelcase",
				"default-param-last",
				"eqeqeq",
				"explicit-function-return-type",
				"explicit-module-boundary-types",
				"no-console",
				"no-const-assign",
				"no-eval",
				"no-external-import",
				"no-inferrable-types",
				"no-self-compare",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn",
				"no-throw-literal",
				"no-undef",
				"no-useless-rename",
				"single-var-declarator"
			]
		},
		"plugins": ["jsr:@ryu/deno-lint-plugin-tailwindcss"]
	},
	"exclude": ["**/_fresh/*"],
	"imports": {
		"@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.6",
		"@heroicons/react": "npm:@heroicons/react@^2.2.0",
		"@libs/qrcode": "jsr:@libs/qrcode@^3.0.0",
		"@logtape/logtape": "jsr:@logtape/logtape@^1.1.0",
		"@nick/clsx": "jsr:@nick/clsx@^0.3.1",
		"@noble/ciphers": "jsr:@noble/ciphers@^2.0.1",
		"@noble/hashes": "jsr:@noble/hashes@^2.0.1",
		"@preact/signals": "npm:@preact/signals@^2.3.2",
		"@std/assert": "jsr:@std/assert@^1.0.15",
		"@std/collections": "jsr:@std/collections@^1.1.3",
		"@std/encoding": "jsr:@std/encoding@^1.0.10",
		"@std/fs": "jsr:@std/fs@^1.0.19",
		"@std/http": "jsr:@std/http@^1.0.21",
		"@std/media-types": "jsr:@std/media-types@^1.1.0",
		"@std/path": "jsr:@std/path@^1.1.2",
		"@std/yaml": "jsr:@std/yaml@^1.0.10",
		"@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.16",
		"@zod/zod": "jsr:@zod/zod@^4.1.12",
		"cbor2": "npm:cbor2@^2.0.1",
		"client": "./client/mod.ts",
		"components": "./components/mod.ts",
		"daisyui": "npm:daisyui@^5.3.9",
		"fresh": "jsr:@fresh/core@2.1.3",
		"islands": "./islands/mod.ts",
		"lang": "./lang/mod.ts",
		"lib/crypto": "./lib/crypto/mod.ts",
		"lib/cookies": "./lib/cookies/mod.ts",
		"marked": "npm:marked@^16.4.1",
		"models": "./models/mod.ts",
		"postgres": "npm:postgres@^3.4.7",
		"preact": "npm:preact@^10.27.2",
		"server": "./server/mod.ts",
		"server/config": "./server/config/mod.ts",
		"server/database": "./server/database/mod.ts",
		"server/database/models": "./server/database/models/mod.ts",
		"server/models": "./server/models/mod.ts",
		"server/log": "./server/log/mod.ts",
		"tailwindcss": "npm:tailwindcss@^4.1.16",
		"ts-pattern": "jsr:@gabriel/ts-pattern@^5.8.0",
		"ultrahtml": "npm:ultrahtml@^1.6.0",
		"utils": "./utils/mod.ts",
		"utils/assets": "./utils/assets/mod.ts",
		"utils/browsers": "./utils/browsers.ts",
		"utils/errors": "./utils/errors/mod.ts",
		"utils/errors/patch": "./utils/errors/patch.ts",
		"utils/helpers": "./utils/helpers/mod.ts",
		"utils/hooks": "./utils/hooks/mod.ts",
		"utils/middleware": "./utils/middleware/mod.ts",
		"utils/state": "./utils/state.ts",
		"vite": "npm:vite@^7.1.12"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"deno.ns",
			"deno.window",
			"deno.unstable"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": [
			"styles/**",
			"credits.json",
			"README.md",
			"*.yaml",
			"container/*"
		],
		"trailingCommas": "onlyMultiLine"
	},
	"test": {
		"include": ["./config", "./helpers", "./lang", "./log", "./secret"]
	},
	"credits": {
		"dependencies": [
			{
				"registry": "npm",
				"name": "tailwindcss",
				"repository": "https://github.com/tailwindlabs/tailwindcss",
				"author": "Tailwind Labs, Inc.",
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/tailwindlabs/tailwindcss/refs/heads/main/LICENSE"
			},
			{
				"registry": "npm",
				"name": "source-map-js",
				"repository": "https://github.com/7rulnik/source-map-js",
				"author": "Valentin Semirulnik",
				"license": "3-Clause BSD License",
				"licenseFile": "https://raw.githubusercontent.com/7rulnik/source-map-js/patch-0.6.1/LICENSE"
			},
			{
				"registry": "npm",
				"name": "marked",
				"repository": "https://github.com/markedjs/marked",
				"author": "Marked, John Gruber (Markdown author)",
				"license": "MIT License, 3-Clause BSD License",
				"licenseFile": "https://raw.githubusercontent.com/markedjs/marked/master/LICENSE.md"
			},
			{
				"registry": "jsr",
				"name": "Deno Standard Library",
				"repository": "https://github.com/denoland/std",
				"author": "Deno authors",
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/denoland/std/refs/heads/main/LICENSE"
			},
			{
				"registry": "jsr",
				"name": "Deno Fresh",
				"repository": "https://github.com/denoland/fresh",
				"author": "Deno authors",
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/denoland/fresh/refs/heads/main/LICENSE"
			},
			{
				"registry": "npm",
				"name": "preact",
				"repository": "https://github.com/preactjs/preact",
				"author": "Preact",
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/preactjs/preact/main/LICENSE"
			},
			{
				"registry": "npm",
				"name": "daisyui",
				"repository": "https://github.com/saadeghi/daisyui",
				"author": "Pouya Saadeghi",
				"license": "MIT License",
				"licenseFile": "https://raw.githubusercontent.com/saadeghi/daisyui/refs/heads/master/LICENSE"
			}
		],
		"noExpand": ["vite"],
		"excludeDependencies": [
			{
				"pattern": "^@std/.*$",
				"reason": "Unified as Deno Standard Library"
			},
			{
				"pattern": "^@fresh/.*$",
				"reason": "Unified as Deno Fresh"
			},
			{
				"pattern": "^@tailwindcss/.*$",
				"reason": "Unified as tailwindcss"
			},
			{
				"pattern": ["^@preact/.*$", "^preact-render-to-string$"],
				"reason": "Unified as preact"
			},
			{
				"pattern": "^react$",
				"reason": "Not actually used and replaced by preact"
			},
			{
				"pattern": "^@types/.*$",
				"reason": "Only used for types and not shipped"
			},
			{
				"pattern": "^source-map-js$",
				"reason": "Dev dependency that is not shipped"
			}
		]
	}
}
